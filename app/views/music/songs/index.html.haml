%table
  %tr
    %th Title
    %th Artist
    %th Album
    %th Genre
    %th &nbsp;

  -@songs.each do |song|
    %tr
      %td=song.title
      %td=song.artist
      %td=song.album
      %td=song.genre
      %td
        =link_to 'song.name', song_path(song, :format=>:mp3), {:class=>'media'}
        | 
        =link_to 'Edit', edit_song_path(song)

